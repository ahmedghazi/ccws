each post in posts
    li
        -var image = post.image
        if post.link && post.name
            a(href="#{post.link}" target="_blank")
                div.site-inner
                    div.site-inner-date #{moment(post.updated_time).format('MM.DD.YY')}
                    div.site-inner-body 
                        span #{post.name}
                        if image
                            span.img
                                img(src="#{image}" width="" height="22" onerror="this.className='img404'")