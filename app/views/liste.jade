.liste-sort
    .row
        .col-xs-1
            div.sort-date Date
        .col-xs-7
            div.sort-name Website
        .col-xs-4
            div.sort-from.text-right Posted by
.liste
    each post in posts
        .item
            
            .row
                -var image = post.image
                if post.link && post.name
                    //a(href="#{post.link}" target="_blank")
                    .col-xs-1
                        div.date #{moment(post.updated_time).format('MM.DD.YY')}
                    
                    .col-xs-7
                        a(href="#{post.link}" target="_blank")
                            div.website_name
                                span #{post.name}
                                if image
                                    span.img
                                        img(src="#{image}" width="" height="17" onerror="this.className='img404'")
                            div.website_url #{post.link}

                    
                    .col-xs-4
                        div.from.text-right #{post.from}