doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    title= title
    block css
      link(rel='stylesheet', href='/css/style.css')
    block js
      if ENV_DEVELOPMENT
        script(src='http://localhost:35729/livereload.js')
  body.loading

    #page
    
      block content
    
      #loader
        img(src="img/loader.png")

    script(src='/js/jquery.min.js')
    script(src='/js/_plugins.js')
    script(src='/js/smooth-state.js')
    script(src='/js/search-controller.js')
    script(src='/js/scroll-controller.js')
    script(src='/js/app.js')
    if title == "pull"
      script(src='/js/pull.js')
